<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#d53235</item>
        <item name="colorPrimaryDark">#d53235</item>
        <item name="colorAccent">#d53235</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AudioFileInfoOverlayText">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">#FFB6C1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="Theme.AppCompat.Light.FullScreen" parent="@style/Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
